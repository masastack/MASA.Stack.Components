@page "/websiteMessages/websiteMessageManagement/{MessageId}"
@page "/websiteMessages/websiteMessageManagement"
@using Masa.Stack.Components.NotificationCenters
@inherits MasaComponentBase

<PageTitle>
    @T("Permission.WebsiteMessageManagement")
</PageTitle>

<MRow Class="full-height">
    <MCol Md="5">
        <MessageLeft @ref="_messageLeftRef" OnClick="HandleChannelClick" />
    </MCol>
    <MCol Class="d-flex flex-column">
        @if (_detailShow)
        {
            <MessageDetail MessageId="_messageId" OnBack="HandleDetailBack"/>
        }
        else
        {
            <MessageRight ChannelId="_channelId" OnClick="HandleListItemClick" OnAllRead="HandleAllRead"/>
        }
    </MCol>
</MRow>