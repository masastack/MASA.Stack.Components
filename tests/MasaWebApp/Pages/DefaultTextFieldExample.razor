@page "/defaultTextFieldExample"

<MCard Class="pa-12">
    <STextField @bind-Value=_value Label="Small" Required Small />
    <STextField @bind-Value=_value Label="Medium" Required Medium Class="my-12" />
    <STextField @bind-Value=_value Label="Large" Required Large />
</MCard>

<MCard Class="mt-12 pa-12">
    <SSelect @bind-Value=_value Items=_items ItemText="v => v" ItemValue="v=> v" Label="Small" Small />
    <SSelect @bind-Value=_value Items=_items ItemText="v => v" ItemValue="v=> v" Label="Medium" Medium Class="my-12" />
    <SSelect @bind-Value=_value Items=_items ItemText="v => v" ItemValue="v=> v" Label="Large" Large />
</MCard>

@code{
    string _value;
    List<string> _items =new()
    {
        "optiopn 1",
        "optiopn 2",
        "optiopn 3",
        "optiopn 4",
        "optiopn 5",
    };
}
