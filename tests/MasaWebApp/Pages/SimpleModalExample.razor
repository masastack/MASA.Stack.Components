                                          Label="DisplayName">
                        </STextField>
                    </MCol>
                </MRow>
                <MRow Class="mt-6">
                    <MCol>
                        <STextField @bind-Value="_model.Name"
                                          Label="Name">
                        </STextField>
                    </MCol>
                </MRow>
            </MForm>
        </ChildContent>
