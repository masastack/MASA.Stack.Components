@namespace Masa.Stack.Components
@inherits MasaComponentBase

<PConfirm Visible="Visible"      
        Title="@T("Operational qualification")"
        Type="AlertTypes.Error"
        OnCancel="CancelAsync"
        OnOk="OkAsync">
    <div>
        <div>@string.Format(@T("Enter \"{0}\" in the input box below to confirm the operation"),ConfirmText)</div>
        <SDefaultTextField @bind-Value="WriteText" ErrorMessages="ErrorMessages" Class="mt-6" Label="@(T("Please enter：")+ ConfirmText)" />
    </div>
</PConfirm>