@page "/notification-center/{MessageId}"
@page "/notification-center"

@using Masa.Stack.Components.NotificationCenters
@inherits MasaComponentBase

<PageTitle>
    @T("Permission.WebsiteMessageManagement")
</PageTitle>

<MRow Class="full-height" NoGutters>
    <MCol Md="4">
        <NotificationLeft @ref="_messageLeftRef" OnItemClick="HandleChannelClick" />
    </MCol>
    <MCol Md="8" Class="pl-6">
        @if (_messageId != default)
        {
            <NotificationDetail Visible="_detailShow" MessageId="_messageId" OnBack="HandleDetailBack" OnChannelClick="HandleChannelClick" />
        }
        <NotificationRight @ref="_messageRightRef" Visible="!_detailShow" ChannelId="_channelId" OnItemClick="HandleListItemClick" OnAllRead="HandleAllRead" />
    </MCol>
</MRow>