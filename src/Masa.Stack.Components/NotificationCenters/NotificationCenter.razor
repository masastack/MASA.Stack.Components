@page "/notification-center/{MessageId}"
@page "/notification-center"

@using Masa.Stack.Components.NotificationCenters
@inherits MasaComponentBase

<PageTitle>
    @T("Permission.WebsiteMessageManagement")
</PageTitle>

<MRow Class="full-height">
    <MCol Md="5">
        <NotificationLeft @ref="_messageLeftRef" OnItemClick="HandleChannelClick" />
    </MCol>
    <MCol Md="7">
        @if (_detailShow)
        {
            <NotificationDetail MessageId="_messageId" OnBack="HandleDetailBack"/>
        }
        else
        {
            <NotificationRight ChannelId="_channelId" OnItemClick="HandleListItemClick" OnAllRead="HandleAllRead"/>
        }
    </MCol>
</MRow>