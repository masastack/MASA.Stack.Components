@namespace Masa.Stack.Components.Layouts
@inherits MasaComponentBase

@if (Items.Any())
{
    <MBreadcrumbs Divider="" Class="ms-breadcrumbs">
        <ChildContent>
            @for (var i = 0; i < Items.Count; i++)
            {
                var j = i;
                var item = Items[j];
                var isLast = j == Items.Count - 1;
                <MBreadcrumbsItem @key="@item" Href="@(isLast ? null : item.Href)">
                    @T(item.Text)
                </MBreadcrumbsItem>
            }
        </ChildContent>
    </MBreadcrumbs>
}
