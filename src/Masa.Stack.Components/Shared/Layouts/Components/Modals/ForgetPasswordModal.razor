@namespace Masa.Stack.Components.Layouts
@inherits MasaComponentBase

<SSimpleDialog @bind-Value="_visible"
               HideCancel=true
               OnCancel="HandleOnCancel">
    <SForgetPasswordSheet @ref="_forgetPasswordSheet"></SForgetPasswordSheet>
</SSimpleDialog>

@code {

    private bool _visible;
    private SForgetPasswordSheet? _forgetPasswordSheet;

    internal void Open()
    {
        _visible = true;
        StateHasChanged();
    }

    private void HandleOnCancel()
    {
        _visible = false;
        _forgetPasswordSheet?.ResetFields();
    }

}
