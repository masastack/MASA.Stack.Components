@namespace Masa.Stack.Components.Layouts
@inherits MasaComponentBase

<SSimpleDialog @bind-Value="_visible"
         Title="@T("TipsForLogout")"
         HeaderClass="mt-3 mb-9"
         OnOk="HandleOnOk">
</SSimpleDialog>

@code {
    [CascadingParameter]
    public SLayout Layout { get; set; } = null!;

    [Inject]
    private NavigationManager Navigation { get; set; } = null!;

    private bool _visible;

    internal void Open()
    {
        _visible = true;
        StateHasChanged();
    }

    private void HandleOnOk()
    {
        _visible = false;
        if (Layout.OnSignOut!=null && Layout.OnSignOut.Invoke())
        {
            return;
        }
        Navigation.NavigateTo("/Account/Logout",true);
    }

}