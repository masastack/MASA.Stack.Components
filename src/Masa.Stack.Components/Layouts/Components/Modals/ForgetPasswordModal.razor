@namespace Masa.Stack.Components.Layouts

<MDialog @bind-Value="_visible" Width="512" Persistent
         ContentClass="rounded-5">
    <MButton Small Icon Color="emphasis" OnClick="HandleOnCancel"
             Class="float-right mt-1 mr-1">
        <SIcon>mdi-close</SIcon>
    </MButton>
    <SForgetPasswordSheet @ref="_forgetPasswordSheet"></SForgetPasswordSheet>
</MDialog>

@code {

    private bool _visible;
    private SForgetPasswordSheet? _forgetPasswordSheet;

    internal void Open()
    {
        _visible = true;
        StateHasChanged();
    }

    private void HandleOnCancel()
    {
        _visible = false;
        _forgetPasswordSheet?.ResetFields();
    }

}
