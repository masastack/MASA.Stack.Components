@inherits MasaComponentBase
@namespace Masa.Stack.Components.Layouts
@inject GlobalConfig GlobalConfig

<PDrawer Title="@T("Settings")"
         Width="300">
    <ActivatorContent>
        <MButton Icon Class="default-text-emphasis-secondary mr-6" @attributes="@context.Attrs">
            <MIcon Size="20">
                mdi-cog-outline
            </MIcon>
        </MButton>
    </ActivatorContent>
    <ChildContent>
        <MRadioGroup @bind-Value="GlobalConfig.PageMode"
                     Label="@T("Mode")">
            <MRadio Label="@T("Breadcrumb")" Value="PageModes.Breadcrumbs" />
            <MRadio Label="@T("PageTab")" Value="PageModes.PageTabs" />
        </MRadioGroup>
    </ChildContent>
</PDrawer>
