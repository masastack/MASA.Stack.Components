@namespace Masa.Stack.Components.Layouts
@inherits MasaComponentBase
@inject IAuthClient AuthClient

<MMenu OffsetY OpenOnHover NudgeTop="-8"
       ContentClass="px-4 py-2">
    <ActivatorContent>
        <MAvatar @attributes="@context.Attrs" Size=40>
            <MImage Src="@avatar"></MImage>
        </MAvatar>
    </ActivatorContent>
    <ChildContent>
        <MList>
            <SDefaultListItem Medium Href="/user-center">
                <MListItemIcon Class="mr-4">
                    <SDefaultIcon Color="emphasis2">mdi-account-circle</SDefaultIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>
                        <span class="regular--text body">@T("UserInfo")</span>
                    </MListItemTitle>
                </MListItemContent>
            </SDefaultListItem>
            <SDefaultListItem Medium OnClick="() => _updatePasswordModal.Open()">
                <MListItemIcon Class="mr-4">
                    <SDefaultIcon Color="emphasis2">mdi-pencil</SDefaultIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>
                        <span class="regular--text body">@T("UpdatePassword")</span>
                    </MListItemTitle>
                </MListItemContent>
            </SDefaultListItem>
            <MDivider></MDivider>
            <SDefaultListItem Medium OnClick="() => _logoutModal.Open()">
                <MListItemIcon Class="mr-4">
                    <SDefaultIcon Color="emphasis2">mdi-logout</SDefaultIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>
                        <span class="regular--text body">@T("Logout")</span>
                    </MListItemTitle>
                </MListItemContent>
            </SDefaultListItem>

        </MList>
    </ChildContent>
</MMenu>

<LogoutModal @ref="_logoutModal"></LogoutModal>

<UpdatePasswordModal @ref="_updatePasswordModal"></UpdatePasswordModal>

@code {
    private LogoutModal _logoutModal = null!;
    private UpdatePasswordModal _updatePasswordModal = null!;
    private string avatar = "https://cdn.masastack.com/stack/images/avatar/mr.gu.svg";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var user = await AuthClient.UserService.GetCurrentUserAsync();
            if (!string.IsNullOrWhiteSpace(user.Avatar))
            {
                avatar = user.Avatar;
                StateHasChanged();
            }
        }
        await base.OnAfterRenderAsync(firstRender);
    }
}
