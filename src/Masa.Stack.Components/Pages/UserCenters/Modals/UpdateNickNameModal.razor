@namespace Masa.Stack.Components.UserCenters
@inherits MasaComponentBase

<SSimpleDialog @bind-Value="Visible"
               Title="@T("Update NickName")"
               IconOfTitle="mdi-email"
               CancelText="@T("Cancel")"
               OkText="@T("Ok")"
               HideCloseIcon
               OnCancel="HandleOnCancel"
               OnOk="HandleOnOk">
    <MForm EnableI18n EnableValidation Model="UpdateUserBasicInfo" @ref="FormRef">
        <STextField @bind-Value="UpdateUserBasicInfo.DisplayName" 
                    Required
                    Class="mb-6"
                    Label="@T("NickName")" />
    </MForm>
</SSimpleDialog>
  
